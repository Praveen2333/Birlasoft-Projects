        public static void Borrower()
        {
                    Console.WriteLine("\n---Menu---\n" +
                    "Type-----1)Borrow book\n" +
                    "Type-----2)Return book\n" +
                    "Type-----3)Search book\n" +
                    "Type-----4)Close\n\n");
                    Console.Write("Choose your option from menu :");

                    int option = int.Parse(Console.ReadLine());

                    if (option == 1)
